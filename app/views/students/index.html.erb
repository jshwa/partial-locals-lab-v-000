
<%= form_for @student, url:search_path do |t|%>
  <%= t.label :Search %>
  <%= t.text_field :name%>
  <%= t.submit %>
<% end %>

<% if @found_students %>
  <%= @found_students.each do |found_student| %>
    <%= raise found_student.name.inspect %>
    <%= render partial: 'student', locals: {student: @found_student} %>
  <% end %>
<% end %>
